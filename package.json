{
  "name": "workboot",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "eslint": "eslint src/js/index.js",
    "test": "ava && npm run eslint",
    "build:doc": "jsdoc src/js/ -c jsdoc.conf.json",
    "build:babel": "babel src/js -d dist/js",
    "minify:js": "node tool/minify_js.js",
    "build:js": "npm run build:babel && webpack && npm run minify:js",
    "build:sass": "node-sass src/css/ -o  dist/css/",
    "build:css": "npm run build:sass",
    "build:all": "npm run test && npm run build:doc && npm run build:js && npm run build:css "
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/awesomes-cn/workboot.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/awesomes-cn/workboot/issues"
  },
  "homepage": "https://github.com/awesomes-cn/workboot#readme",
  "devDependencies": {
    "ava": "^0.13.0",
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.7.2",
    "eslint": "^2.4.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.2.3",
    "minami": "^1.1.1",
    "node-sass": "^3.4.2",
    "webpack": "^1.12.14",
    "fs-extra": "^0.26.7",
    "uglify-js": "^2.6.2",
    "colors": "^1.1.2"
  },
  "ava": {
    "files": [
      "test/**/*.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
